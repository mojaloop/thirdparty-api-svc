{
  "extends": "./tsconfig.json",
  "include": [
    "src",
    "ambient.d.ts",
  ],
  "exclude": [
    "coverage",
    "dist",
    "node_modules",
    "test",
    "commitlint.config.js",
    "jest.bdd.config.js",
    "jest.config.js"
  ],
  "compilerOptions": {
    "paths": {
      "@hapi/podium": [
        "node_modules/@types/hapi__podium"
      ],
      "~/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    },
  }
}