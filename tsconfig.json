{
  "include": [
    "src",
    "test",
    "ambient.d.ts",
    "commitlint.config.js",
    "jest.bdd.config.js",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "rootDirs": [
      "src",
      "test"
    ],
    "lib": [
      "esnext"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // TODO: change back before PR!!!
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      // @hapi/podium types are broken
      // see https://github.com/hapijs/hapi/issues/4240#issuecomment-810860745
      // for more info
      "@hapi/podium": [
        "node_modules/@types/hapi__podium"
      ],
      "~/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
